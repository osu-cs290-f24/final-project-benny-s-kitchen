<main>
    <div class="full-recipe">
        <h1>{{title}}</h1>
        <p>Preparation Time: {{preparationTime}}    Difficulty: {difficulty}</p>
        <img src={{images.[0]}} alt="{{title}}">
        <p>{{description}}</p>
        <h2>Ingredients</h2>
        <ul>
            {{#each ingredients}}
                <li>{{this}}</li>
            {{/each}}
        </ul>
        <h2>Instructions</h2>
        <ol>
            {{#each instructions}}
                <li>{{this}}</li>
            {{/each}}
        </ol>
    </div>
</main>